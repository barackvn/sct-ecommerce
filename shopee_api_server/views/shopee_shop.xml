    <menuitem name="shopee_api_server" id="shopee_api_server.menu_root"/>
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="shopee_api_server.menu_1" parent="shopee_api_server.menu_root"/>
    <!--
    <menuitem name="Menu 2" id="shopee_api_server.menu_2" parent="shopee_api_server.menu_root"/>
    -->
    <!-- actions -->
    <menuitem name="List" id="shopee_api_server.menu_1_list" parent="shopee_api_server.menu_1"
