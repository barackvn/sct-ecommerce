<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="shopee_api_server.shopee_shop_list">
      <field name="name">shopee shop list</field>
      <field name="model">shopee_api_server.shopee_shop</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="client_id"/>
          <field name="shop_id"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="shopee_api_server.shopee_shop_action_window">
      <field name="name">shopee_api_server window</field>
      <field name="res_model">shopee_api_server.shopee_shop</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
