<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record model="ir.ui.view" id="shopee_product_sample_form_view">
            <field name="name">shopee.product.sample.form</field>
            <field name="model">shopee.product.sample</field>
            <field name="arch" type="xml">
                <form string="Shopee Product">
                    <group string="Basic Infomation">
                        <field name="product_tmpl_id" invisible="1"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="ecomm_categ_id" invisible="1"/>
                        <field name="category_name"/>
                        <field name="categ_attribute_ids" widget="one2many_list"/>
                    </group>
                    <group string="Selling Infomation">
                    </group>
                    <group string="Images">
                    </group>
                    <group string="Logistics">
                        <group col="2" colspan="4">
                            <field name="weight" widget="char"/>
                        </group>
                        <group col="4" colspan="4">
                            <label for="measures"  string="Package measures (cm)" colspan="1"/>
                            <div name="measures" colspan="3" col="3">
                                <group col="3" colspan="3">
                                    <field name="package_width" nolabel="1" colspan="1" placeholder="Width" widget="char"/>
                                    <field name="package_length" nolabel="1" colspan="1" placeholder="Length" widget="char"/>
                                    <field name="package_height" nolabel="1" colspan="1" placeholder="Height" widget="char"/>
                                </group>
                            </div>
                        </group>
                    </group>
                    <group string="Other Infomations">
                        <field name="is_pre_order"/>
                        <field name="condition"/>
                        <field name="days_to_ship"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>

